{% extends 'base.html.twig' %}

{% block title %}Alteret{% endblock %}

{% block content %}
    <style>
        body {
            background-color: #f8f9fa; /* Fond clair */
            font-family: 'Arial', sans-serif;
        }
        .table {
            background-color: white;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            margin-top: 20px;
            width: 100%; /* Prend toute la largeur disponible */
        }
        th, td {
            padding: 15px; /* Augmenter le padding pour plus d'espace */
        }
        th {
            background-color:#0694c5; /* Couleur de l'en-tête */
            color: white;
            text-align: left;
        }
        td {
            font-size: 16px; /* Agrandir la taille du texte pour une meilleure lisibilité */
        }
        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 30px;
            font-weight: bold;
        }
        .btn {
            margin-top: 20px;
            padding: 10px 20px;
            color: white;
            /* background-color: #6c757d; */
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }
        /* .btn:hover {
            background-color: #5a6268;
        } */
        .container {
            max-width: 1000px;
        }
        .table-responsive {
            margin-top: 20px;
        }
    </style>

    <div class="container">
        <h1>Alteret</h1>
        <h1>          <img src="{{ asset('uploads/images/' ~ Alteret.photo) }}" alt="Photo de la Alteret" class="img-fluid" style="max-width: 200px; border-radius: 8px;">
</h1>
        <!-- Table responsive -->
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Quantité</th>
                        <td>{{ Alteret.Quantite }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ Alteret.Prix }} DT</td>
                    </tr>
                    {# <tr>
                        <th>Photo</th>
                        <td>
                            
                        </td>
                    </tr> #}
                    <tr>
                        <th>Modèle</th>
                        <td>{{ Alteret.Modele }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ Alteret.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_Alteret_index') }}" class="btn btn-primary">Retour à la liste</a>
            <a href="{{ path('app_Alteret_edit', {'id': Alteret.id}) }}" class="btn btn-success">Modifier</a>
        </div>

        {{ include('Alteret/_delete_form.html.twig') }}
    </div>
{% endblock %}
